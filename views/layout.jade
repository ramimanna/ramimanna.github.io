doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    //Material Design Lite
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://code.getmdl.io/1.1.3/material.cyan-teal.min.css')
    script(defer='', src='https://code.getmdl.io/1.1.3/material.min.js')

    //Fonts
    link(href='https://fonts.googleapis.com/css?family=Aladin|Codystar|Lato:100,300|Cherry+Swash|Nova+Flat|Permanent+Marker|Delius+Swash+Caps|Josefin+Sans', rel='stylesheet', type='text/css')
    

    //My Stylesheets
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    block HeadAdditions
  body
    // Uses a transparent header that draws on top of the layout's background
    .demo-layout-transparent.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      #front-page-container
        header.mdl-layout__header.mdl-layout__header--transparent
          .mdl-layout__header-row
            // Title
            span.mdl-layout-title Ramroom
            // Add spacer, to align navigation to the right
            .mdl-layout-spacer
            // Navigation
            nav.mdl-navigation
              a.mdl-navigation__link(href='/projects') Projects
              a.mdl-navigation__link(href='/exploration') Exploration
              a.mdl-navigation__link(href='/adventure') Adventure
              a.mdl-navigation__link(href='') Experiments
              a.mdl-navigation__link(href='') Strategy
        //
