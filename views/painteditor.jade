    #ToolButtons.mdl-grid
      .mdl-cell.mdl-cell--2-col          
        button#shapeDrawFillTool.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Shape Draw Fill
      .mdl-cell.mdl-cell--2-col          
        button#shapeDrawOutlineTool.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Shape Draw Outline
      .mdl-cell.mdl-cell--2-col          
        button#cursorTool.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Cursor
      .mdl-cell.mdl-cell--2-col          
        button#drawTool.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Draw
      .mdl-cell.mdl-cell--2-col          
        button#textTool.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Text
      .mdl-cell.mdl-cell--2-col          
        button#imageTool.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Image
    .mdl-grid
      button#ColorsButton.mdl-button.mdl-js-button.mdl-button--icon
        i.material-icons color_lens
      #Colors.mdl-menu.mdl-js-menu(for='ColorsButton',onchange='getChoice(this.id);')
        option.mdl-menu__item.mdl-color--teal-300(value='Green', onclick="updateChoice('Colors',this.value)") 
        option.mdl-menu__item.mdl-color--deep-purple-300(value='Purple', onclick="updateChoice('Colors',this.value)") 
        option.mdl-menu__item.mdl-color--white(value='White', onclick="updateChoice('Colors',this.value)") 
        option.mdl-menu__item.mdl-color--red-300(value='Red', onclick="updateChoice('Colors',this.value)") 
        option.mdl-menu__item.mdl-color--deep-orange-300(value='Orange', onclick="updateChoice('Colors',this.value)") 
        option.mdl-menu__item.mdl-color--cyan-300(value='Blue', onclick="updateChoice('Colors',this.value)")  

      button#ShapesButton.mdl-button.mdl-js-button.mdl-button--icon
        i.material-icons fiber_manual_record
      #Shapes.mdl-menu.mdl-js-menu(for='ShapesButton',onchange='getChoice(this.id);')
        option.mdl-menu__item.material-icons(value='Rectangle', onclick="updateChoice('Shapes',this.value)") stop
        option.mdl-menu__item.material-icons(value='Circle', onclick="updateChoice('Shapes',this.value)") fiber_manual_record
        option.mdl-menu__item.material-icons(value='Line', onclick="updateChoice('Shapes',this.value)") remove


