    #CanvasCard.mdl-card.mdl-shadow--4dp
      .mdl-card__media
        canvas#myCanvas(width='1000', height='500')
        //- canvas#feed(width="1000",height='500')
        //- canvas#display(width="1000",height='500')
      button.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--colored Save
    .mdl-grid
      .mdl-cell.mdl-cell--6-col
        //- select#Colors(onchange='getChoice(this.id);')
