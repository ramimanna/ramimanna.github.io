doctype html
html
  head
    title #{mode}
    link(rel='stylesheet', type='text/css', href='/stylesheets/trackingStyle.css')
    script(src='/javascripts/tracking-min.js')
    script(src='/javascripts/data/face-min.js')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
    script(defer='', src='https://code.getmdl.io/1.1.3/material.min.js')
    link(rel='stylesheet', href='https://code.getmdl.io/1.1.3/material.cyan-teal.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')


  body
      //- .mdl-tabs.mdl-js-tabs.mdl-js-ripple-effect
      //-   .mdl-tabs__tab-bar
      //-     a.mdl-tabs__tab.is-active(href='#scharr-panel') Scharr
      //-     a.mdl-tabs__tab(href='#sobel-panel') Sobel
      //-     a.mdl-tabs__tab(href='#grayscale-panel') Grayscale
      //-   #scharr-panel.mdl-tabs__panel.is-active scharr
      //-   #sobel-panel.mdl-tabs__panel sobel
      //-   #grayscale-panel.mdl-tabs__panel grayscale

      .mdl-layout.layout-js-layout
          .mdl-typography--display-4 #{mode}
          canvas#frontCanvas(width='800', height='600')
          canvas#backingCanvas(width='800', height='600')
          canvas#videoCanvas(width='800', height='600')
          video#myVideo(autoplay='true', width='800', height='600', preload='', loop='', muted='')
          script(src='/javascripts/jsfeat-min.js', type='text/javascript')
          script(src='/javascripts/video.js', type='text/javascript')
          script(src='/javascripts/trackers.js', type='text/javascript')
      #ModeButtons.mdl-grid
        .mdl-cell.mdl-cell--2-col          
          a(href='tracking/scharr') 
            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Scharr Filter
        .mdl-cell.mdl-cell--2-col          
          a(href='tracking/sobel') 
            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Sobel Filter
        .mdl-cell.mdl-cell--2-col          
          a(href='tracking/opticalflow') 
            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Optical Flow
        .mdl-cell.mdl-cell--2-col          
          a(href='tracking/facedetect') 
            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Face Detect
        .mdl-cell.mdl-cell--2-col          
          a(href='tracking/colordetect') 
            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored Color Detect
      .mdl-grid
        .mdl-cell.mdl-cell--2col        
          button#ColorsButton.mdl-button.mdl-js-button.mdl-button--icon
            i.material-icons color_lens
          #Colors.mdl-menu.mdl-js-menu(for='ColorsButton',onchange='getChoice(this.id);')
            a(href="tracking/green")
              option.mdl-menu__item.mdl-color--green-300
            a(href="tracking/purple")
              option.mdl-menu__item.mdl-color--deep-purple-300
            a(href="tracking/yellow")
              option.mdl-menu__item.mdl-color--yellow-300
            a(href="tracking/red")          
              option.mdl-menu__item.mdl-color--red-300
            a(href="tracking/cyan")
              option.mdl-menu__item.mdl-color--cyan-300
            a(href="tracking/blue")
              option.mdl-menu__item.mdl-color--indigo-300